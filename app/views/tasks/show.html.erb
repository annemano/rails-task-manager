<h1><%= @task.title %></h1>

<div class="alert alert-dark d-flex align-items-center" role="alert">
  <p><%= @task.details %></p>
</div>

<% if @task.completed %>
  <p><i class="far fa-check-square"></i> This task is completed</p>
<% else %>
  <p><i class="far fa-square"></i> This task is not completed yet</p>
<% end %>

<%= link_to 'Edit', edit_task_path(@task) %> | <%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: 'Are you sure?' } %>

<hr>
<%= link_to tasks_path do %>
  <i class="fas fa-undo-alt"></i> Back to list
<% end %>
